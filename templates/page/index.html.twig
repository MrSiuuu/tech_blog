{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="color:#2b3a42; text-align:center;">Derniers articles</h1>
    <div style="display:flex; flex-direction:column; gap:2em;">
        {% for article in articles %}
            <div style="background:#f7f9fa; border-radius:8px; box-shadow:0 1px 6px #eee; padding:1.5em;">
                <h2 style="margin-top:0; color:#1a2327; font-size:1.5em;">
                    <a href="{{ path('app_article_show', {id: article.id}) }}" style="color:#1a2327; text-decoration:none;">{{ article.title }}</a>
                </h2>
                <p style="color:#444;">{{ article.content|slice(0, 180) ~ (article.content|length > 180 ? '...' : '') }}</p>
                <a href="{{ path('app_article_show', {id: article.id}) }}" style="display:inline-block; margin-top:1em; background:#2b3a42; color:#fff; padding:0.5em 1.2em; border-radius:5px; text-decoration:none; font-weight:bold;">Lire la suite</a>
            </div>
        {% else %}
            <p style="text-align:center; color:#888;">Aucun article pour le moment.</p>
        {% endfor %}
    </div>
{% endblock %} 